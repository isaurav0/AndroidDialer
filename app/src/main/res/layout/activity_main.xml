<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/indexLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="61dp">


    <LinearLayout
        android:id="@+id/dialer_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_above="@id/call_btn"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginBottom="70dp">

            <EditText
                android:id="@+id/edit_display"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="50sp"
                android:layout_toLeftOf="@+id/btn_back"
                android:layout_alignParentStart="true"
                android:cursorVisible="false"/>

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_backsp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:padding="20dp"
            />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:weightSum="9">

            <Button
                android:id="@+id/btn_1"
                android:text="1"
                  android:background="@color/colorButtonBack"
                android:layout_margin="1dp"
                android:textSize="50sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                />

            <Button
                android:id="@+id/btn_2"
                android:text="2"
                  android:background="@color/colorButtonBack"
                android:layout_margin="1dp"
                android:textSize="50sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3" />

            <Button
                android:id="@+id/btn_3"
                android:text="3"
                  android:background="@color/colorButtonBack"
                android:layout_margin="1dp"
                android:textSize="50sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:weightSum="9">

            <Button
                android:id="@+id/btn_4"
                android:text="4"
                android:textSize="50sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                  android:background="@color/colorButtonBack"
                android:layout_margin="1dp"
                >

            </Button>

            <Button
                android:id="@+id/btn_5"
                android:text="5"
                android:textSize="50sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                  android:background="@color/colorButtonBack"
                android:layout_margin="1dp"
                />

            <Button
                android:id="@+id/btn_6"
                android:text="6"
                android:textSize="50sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                  android:background="@color/colorButtonBack"
                android:layout_margin="1dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:weightSum="9">

            <Button
                android:id="@+id/btn_7"
                android:text="7"
                android:textSize="50sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                  android:background="@color/colorButtonBack"
                android:layout_margin="1dp"
                />

            <Button
                android:id="@+id/btn_8"
                android:text="8"
                android:textSize="50sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                  android:background="@color/colorButtonBack"
                android:layout_margin="1dp"
                />

            <Button
                android:id="@+id/btn_9"
                android:text="9"
                android:textSize="50sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                  android:background="@color/colorButtonBack"
                android:layout_margin="1dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:weightSum="9">

            <Button
                android:id="@+id/btn_ast"
                android:text="*"
                android:textSize="50sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                  android:background="@color/colorButtonBack"
                android:layout_margin="1dp"
                />

            <Button
                android:id="@+id/btn_0"
                android:text="0"
                android:textSize="50sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                  android:background="@color/colorButtonBack"
                android:layout_margin="1dp"
                />

            <Button
                android:id="@+id/btn_hash"
                android:text="#"
                android:textSize="50sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                  android:background="@color/colorButtonBack"
                android:layout_margin="1dp"
                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F9F9F9"
        android:layout_marginBottom="8dp"
        android:layout_above="@id/call_btn"
       />
    <ImageButton
        android:id="@+id/call_btn"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_call_black_24dp"
        android:background="#00000000"
        />


</RelativeLayout>

